<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".numbers">

    <LinearLayout
        android:id="@+id/header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_btn"
            android:padding="10dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif-thin"
            android:text="Numbers"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="30dp" />
    </LinearLayout>

    <ScrollView
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingBottom="20dp"
        android:fillViewport="false"
        android:id="@+id/side_bar">
        <LinearLayout
            android:id="@+id/side_bar_content"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            >
            <Button
                android:text="1"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/one_number"
                />

            <Button
                android:text="2"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/two_number"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="3"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/three_number"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="4"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/four_number"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="5"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/five_number"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="6"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/six_number"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="7"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:layout_marginTop="10dp"
                android:id="@+id/seven_number"
                />

            <Button
                android:text="8"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/eight_number"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="9"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/nine_number"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="10"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/ten_number"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintLeft_toRightOf="@+id/side_bar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        >

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/alphabet_details"
        android:padding="20dp"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/layout_bg"
        android:backgroundTint="@color/purple_700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:src="@drawable/one"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/letter_icon"
            />

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/letter_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="One"
            android:textColor="@color/white"
            android:textFontWeight="900"
            android:textSize="60dp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:id="@+id/letter_word"
            />

        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/letter_word"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/numbers"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sun"
                />
        </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
