                />

            <Button
                android:text="y"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/y_letter"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="z"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/z_letter"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/alphabet_details"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintLeft_toRightOf="@+id/side_bar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:padding="20dp"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/layout_bg"
        android:backgroundTint="@color/purple_700"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:src="@drawable/apple"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/letter_icon"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Aa"
            android:textColor="@color/white"
            android:textFontWeight="900"
            android:textSize="75dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/letter_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="30dp"
            android:id="@+id/letter_cap_small"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/letter_cap_small"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="A"
                android:textColor="#C7C7C7"
                android:textFontWeight="900"
                android:textSize="60dp"
                android:textAlignment="center"
                android:id="@+id/letter_cap"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="pple"
                android:textColor="@color/white"
                android:textFontWeight="900"
                android:textSize="60dp"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:id="@+id/letter_word"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>