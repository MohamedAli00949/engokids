<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".letters">

    <LinearLayout
        android:id="@+id/header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_btn"
            android:padding="10dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif-thin"
            android:text="Letters"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="30dp" />
    </LinearLayout>

    <ScrollView
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:fillViewport="false"
        android:id="@+id/side_bar">
        <LinearLayout
            android:id="@+id/side_bar_content"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            >

            <Button
                android:id="@+id/a_letter"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:text="a"
                android:textSize="20dp"
                app:cornerRadius="40dp" />

            <Button
                android:text="b"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/b_letter"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="c"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/c_letter"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="d"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/d_letter"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="e"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/e_letter"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="f"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/f_letter"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="g"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/g_letter"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="h"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:layout_marginTop="10dp"
                android:id="@+id/h_letter"
                />

            <Button
                android:text="i"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/i_letter"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="j"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/j_letter"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="k"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/k_letter"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="l"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/l_letter"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="m"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/m_letter"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="n"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/n_letter"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="o"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/o_letter"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="p"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                app:cornerRadius="40dp"
                android:id="@+id/p_letter"
                android:layout_marginTop="10dp"
                />

            <Button
                android:text="q"
                android:layout_width="50dp"
